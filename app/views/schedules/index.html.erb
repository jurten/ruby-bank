<p style="color: green"><%= notice %></p>

<div class="container">
<%= link_to "Crear Horario", new_schedule_path, class: "btn btn-outline-success float-right" %> 
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Dia</th>
        <th scope="col">Apertura</th>
        <th scope="col">Cierre</th>
        <th scope="col">Sucursal</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% @schedules.each do |schedule| %>
        <tr>
          <td><%= Schedule.i_to_days schedule.day %></td>
          <td><%= schedule.start.strftime "%H:%M" %></td>
          <td><%= schedule.finish.strftime "%H:%M" %></td>
          <td><%= schedule.branch.name %></td>
        <td>
          <%= link_to "Ver", schedule, class: "btn btn-outline-info" %>
          <%= link_to "Editar", edit_schedule_path(schedule), class: "btn btn-outline-primary" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
