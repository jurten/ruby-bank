<div class="container">
  <% if can? :create, User %>
    <%= link_to "Nuevo Empleado", new_staff_path, class:"btn btn-outline-success float-right" %>
    <%= link_to "Nuevo Administrador", new_admin_path, class:"btn btn-outline-success float-right" %>
  <% end %>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Rol</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role_to_s %></td>
        <td>
          <%= link_to "Ver", user, class: "btn btn-outline-info" %>
          <%= link_to "Editar", edit_user_path(user), class: "btn btn-outline-primary" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
