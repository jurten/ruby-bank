
<div class="container">
<%= link_to "Crear Nueva", new_branch_path, class: "btn btn-outline-success float-right" %> 
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Sucursal</th>
        <th scope="col">Direccion</th>
        <th scope="col">Telefono</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
        <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.name %></td>
          <td><%= branch.address %></td>
          <td><%= branch.phone %></td>
        <td>
          <%= link_to "Ver", branch, class: "btn btn-outline-info" %>
          <%= link_to "Editar", edit_branch_path(branch), class: "btn btn-outline-primary" %>
          <%= link_to "Horario", new_schedule_path(branch), class: "btn btn-outline-success" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
