<div class="container">
<br>
<h1>Iniciar Sesion</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"%>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "ContraseÃ±a", class: "form-control"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label "Recuerdame", type:"checkbox" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar Sesion", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<br>
</div>
